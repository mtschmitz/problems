<% provide(:title, 'Sign In') %>
<div class="row">
  <div class="col-md-4">
  </div>
  <div class="col-md-4">

  <h1>Sign in</h1>
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= f.input :email, required: false, autofocus: true , :input_html => {:size => 40} %>
      <%= f.input :password, required: false, :input_html => {:size => 40} %>
      <div>
        <%= f.input :remember_me, as: :boolean, label: false %>
        <%= f.label :remember_me %>
      </div>
      <%= f.submit  "Submit" , class: "btn btn-large btn-primary", style: "margin-top: 20px; margin-bottom: 20px;" %>
  <% end %>
  <div>
    <%= render "devise/shared/links" %>
  </div>

  </div>
  <div class="col-md-4">
  </div>
</div>
