<li id="<%= feed_item.id %>">

	<div class="row">
      <div class="col-md-12">
      	<span class="user"><strong> <%= feed_item.name %></strong> </span>
		<span class="content"><small><%= feed_item.description %></small></span>
      	<span class="timestamp">Added <%= time_ago_in_words(feed_item.created_at) %> ago.</span>
      	<span class="col-xs-pull-10">    
      Added by: 
      <% user = User.find(feed_item.user_id) %>
      <%= gravatar_for(user, size: 20 ) %>
      </span>
  <% if current_user == feed_item.user %>
    <%= render 'shared/delete_problem', feed_item: feed_item %>
  <% end %>
		  </div>
	</div>
</li>



